@{
    ViewData["Title"] = "Jobs - public";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>PUBLIC JOBS LIST</h2>
    <h3>Our Current Jobs</h3>
    <h4 class="important">@Html.ActionLink("Add a new job", "Create")</h4>
</div>
@foreach (var Job in Model)
{
    <ul>
        <li>@Job.Title</li>
        <ul>
            <li>@Job.Description</li>
        </ul>
        @if (Job.Worker == null)
        {
            <li class="btn">Status: This job is unclaimed.</li>
        }
        else
        {
            <li class="btn">Status: This Job is claimed by @Job.Worker.FirstName @Job.Worker.LastName</li>

        }
    </ul>
    <hr />
}

