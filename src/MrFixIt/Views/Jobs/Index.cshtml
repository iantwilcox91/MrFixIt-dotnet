@{
    ViewData["Title"] = "Jobs-Job list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h3>Our Current Jobs</h3>
    @Html.ActionLink("Add a new job", "Create")
</div>
@foreach (var Job in Model)
{
    <ul>
        <li>@Job.Title</li>
        <ul>
            <li>@Job.Description</li>
        </ul>
        @if (Job.Worker == null)
        {
            <li class="HideAfterClick-@Job.JobId">
                <button class="claimjob">Claim</button>
                <input type="hidden" value="@Job.JobId" class="ThisJobId" />
                <input type="hidden" value="@User.Identity.Name" class="ThisUserName-@Job.JobId" />
            </li>
            <div class="ClaimedJob-@Job.JobId"></div>

        }
        else
        {
            <li class="btn">This Job is claimed by @Job.Worker.FirstName @Job.Worker.LastName</li>

        }
    </ul>


    <hr />
}

